<!DOCTYPE html>
<html lang="CZ">
  <%= render 'layouts/rails_default' %>
  <body>
  <%= render 'layouts/header' %>
  <div class="container">
    <% flash.each do |message_type, message| %>
      <div> <%= content_tag(:div, message, class: "alert alert-#{message_type}") %> </div>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
    
    <!--panel with konzole info for debugging-->
    <%= debug(params) if Rails.env.development? %>
  </div>
  </body>
</html>
